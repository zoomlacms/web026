@using System.Data
@using ZoomLa.BLL
@using ZoomLa.Common
@using ZoomLa.BLL.Helper
@model System.Data.DataTable
@{
   
}
<table class="table table-striped table-bordered" id="EGV">
    <tr>
        <td class="td_xs excel_no"></td>
        <td class="td_s">ID</td>
        <td>名称</td>
        <td>备注</td>
        <td>创建时间</td>
        <td class="td_l excel_no">操作</td>
    </tr>
    @foreach (DataRow dr in Model.Rows)
            {
        <tr>
            <td class="excel_no"><input type="checkbox" name="idchk" value="@dr["ID"]" /></td>
            <td>@dr["ID"]</td>
            <td>@dr["value"]</td>
            <td>@dr["Remark"]</td>
            <td class="td_l">@DateHelper.ToDate(dr["CDate"])</td>
            <td class="excel_no td_l">
                <a href="CTypeAdd?ID=@dr["ID"]" class="option_style"><i class="fa fa-pencil"></i>修改</a>
                <a href="javascript:;" class="option_style" onclick="mvcpage.del({ ids: '@dr["ID"]', url: 'ctype_del', confirm: '确定要删除吗' });"><i class="fa fa-trash-o"></i>删除</a>
            </td>
        </tr>
    }
</table>