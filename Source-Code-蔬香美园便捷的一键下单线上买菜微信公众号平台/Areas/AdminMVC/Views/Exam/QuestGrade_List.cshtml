@using System.Data
@model ZoomLa.SQLDAL.SQL.PageSetting
@{ 
    Model.cols = 4;
}
<div id="EGV">
	<div class="container-fluid pr-0">
	<div class="row sysRow">
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <td></td>
            <td>ID</td>
            <td>@(ViewBag.cateName)名称</td>
            <td>操作</td>
        </tr>
        @foreach (DataRow dr in Model.dt.Rows)
        {
            <tr>
                <td><input type="checkbox" value="@dr["GradeID"]" data-name="@dr["GradeName"]" name="idchk" /></td>
                <td>@dr["GradeID"]</td>
                <td>@dr["GradeName"]</td>
                <td>
                    <a href="javascript:;" onclick="ShowGrade(@dr["GradeID"],'@dr["GradeName"]')" ><i class="fa fa-pencil"></i>修改</a>
                    <a href="QuestList?@ViewBag.paraName=@dr["GradeID"]" ><i class="fa fa-list-alt"></i>试题管理</a>
                    <a href="javascript:;" onclick='mvcpage.del({url: "QuestGrade_Del", id: @dr["GradeID"], confirm: "是否确认删除"});'><i class="fa fa-trash-o"></i>删除</a>
                </td>
            </tr>
        }
        @Html.Partial("_page", Model)
    </table>
	</div>
	</div>
</div>