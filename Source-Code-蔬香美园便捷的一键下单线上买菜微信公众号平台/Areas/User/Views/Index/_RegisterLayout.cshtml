<script charset="utf-8" src="/Plugins/Ueditor/ueditor.all.js"></script>
@RenderSection("head")
</head>
<body>
    @Html.Partial("_leftmenu")
    @RenderSection("content")
    <script>
        $(function () {
            //边栏事件
            $("#mimenu_btn").click(function (e) {
                if ($(".u_menu_left").width() > 0) {
                    $(".u_menu_left ul").fadeOut(100);
                    $(".u_menu_left").animate({ width: 0 }, 200);
                }
                else {
                    $(".u_menu_left").animate({ width: 150 }, 300);
                    $(".u_menu_left ul").fadeIn();
                }
            });
            $("#backimg_div").css("min-height", $(window).height());
            $(window).resize(function () { $("#backimg_div").css("min-height", $(window).height()); });
        })
    </script>
    @RenderSection("script")
</body>
</html>