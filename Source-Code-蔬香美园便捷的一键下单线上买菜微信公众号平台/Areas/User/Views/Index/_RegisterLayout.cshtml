@using ZoomLa.Components
@inherits System.Web.Mvc.WebViewPage
@functions{
    public string GetBKImg()
    {
        if (SiteConfig.SiteOption.SiteManageMode == 1) { return ""; }
        else { return "//code.z01.com/user_login.jpg"; }
    }
}
<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="/dist/css/bootstrap4.min.css" rel="stylesheet"/>
<link href="/dist/css/font-awesome.min.css" rel="stylesheet"/>
<link href="/dist/css/weui.min.css" type="text/css" rel="stylesheet" />
